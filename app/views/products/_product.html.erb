<% if product_page %>

<br>
<%= link_to product.name , new_product_path(:id => product.id) %>
<% if product.image.present?%>
<img src="<%= product.image%>" alt="Smiley face" height="42" width="42">
<% end %>
<br>

<% else %>

<h1><%= product.name%></h1>

<p><%= product.name%></p>
<p><%= product.price%></p>
<% if product.image.present?%>
<img src="<%= product.image%>" alt="Smiley face" height="42" width="42">
<% end %>


<% end %>